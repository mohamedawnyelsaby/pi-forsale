# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://pi-forsale.vercel.app

# Pi Network (Testnet)
PI_API_KEY=testnet_mock_key_here
