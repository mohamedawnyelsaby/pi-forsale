# ============================================
# Forsale AI - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# Pi Network Configuration (REQUIRED)
PI_API_KEY=your_pi_api_key_here
# Get your key from: https://develop.pi

# Server Configuration
NODE_ENV=development
# Options: development, staging, production
PORT=3000

# Frontend URLs (comma-separated for CORS)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
# Add your production domain here

# Database Configuration (Future Implementation)
# DATABASE_URL=mongodb://localhost:27017/forsale-ai
# or
# DATABASE_URL=postgresql://username:password@localhost:5432/forsale

# AI API Keys (Future Integration)
# OPENAI_API_KEY=sk-your_openai_key_here
# CLAUDE_API_KEY=sk-ant-your_claude_key_here
# GEMINI_API_KEY=your_gemini_key_here

# Shipping API Keys (Future Integration)
# DHL_API_KEY=your_dhl_api_key
# FEDEX_API_KEY=your_fedex_api_key
# UPS_API_KEY=your_ups_api_key

# Payment & Escrow Configuration
ESCROW_ENABLED=true
AUTO_REFUND_DAYS=14
# Days before automatic refund if no confirmation

# Security Configuration
JWT_SECRET=your_jwt_secret_change_this_in_production_123456
SESSION_SECRET=your_session_secret_change_this_in_production_789012
# Generate strong random strings for production

# Email Configuration (Future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_specific_password

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, http, debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
# Comma-separated MIME types

# Redis Configuration (Future - for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Monitoring & Analytics (Future)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
# MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
FEATURE_AI_CHAT=true
FEATURE_AUTO_SHIPPING=true
FEATURE_DISPUTE_RESOLUTION=true
FEATURE_MULTI_LANGUAGE=true

# ============================================
# IMPORTANT SECURITY NOTES:
# ============================================
# 1. NEVER commit .env to version control
# 2. Use strong, random values for secrets
# 3. Rotate keys regularly in production
# 4. Use environment variables in hosting platforms
# 5. Keep this .env.example up to date
